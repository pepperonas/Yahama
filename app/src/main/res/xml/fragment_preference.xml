<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:key="@string/PR_SCREEN_KEY">

    <PreferenceCategory
        android:key="@string/PR_CAT_KEY_GET_PREMIUM"
        android:title="@string/pref_category_premium_title">

        <Preference
            android:key="@string/PR_KEY_GET_PREMIUM"
            android:title="@string/pref_title_get_premium"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_usability_title">

        <Preference
            android:key="@string/PR_KEY_VOL_STEPS"
            android:title="@string/pref_title_vol_steps"/>

        <CheckBoxPreference
            android:key="@string/PR_KEY_CLOSE_VOL_DIALOG_AUTOMATICALLY"
            android:title="@string/pref_title_close_volume_dialog_automatically"
            android:summary="@string/pref_summary_close_volume_dialog_automatically"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_design_title">

        <Preference
            android:key="@string/PR_KEY_THEME"
            android:title="@string/pref_title_theme"/>

        <Preference
            android:key="@string/PR_KEY_DETAIL_IN_NAV_DRAWER"
            android:title="@string/pref_title_detail_in_nav_drawer"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_others_title">

        <Preference
            android:key="@string/PR_KEY_BUILD_VERSION"
            android:title="@string/pref_title_build_version"/>

    </PreferenceCategory>

</PreferenceScreen>