<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="td_accent_color">@color/colorAccent</item>

        <item name="td_primary_color">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="td_nav_drawer_header">@drawable/side_nav_bar</item>

        <item name="td_fab_menu_normal">@color/fabMenuColorNormal</item>
        <item name="td_fab_menu_pressed">@color/fabMenuColorPressed</item>
        <item name="td_fab_normal">@color/fabColorNormal</item>

        <item name="td_nav_drawer_bg">@drawable/navigation_view_bg</item>

        <item name="td_circle">@drawable/circle</item>

        <item name="td_drawer_audio_icon">@drawable/ic_music_note_white_24dp</item>
        <item name="td_drawer_dsp_icon">@drawable/ic_pulse_white_24dp</item>
        <item name="td_drawer_input_icon">@drawable/ic_import_white_24dp</item>
        <item name="td_drawer_webradio_icon">@drawable/ic_radio_white_24dp</item>
        <item name="td_drawer_spotify_icon">@drawable/ic_spotify_white_24dp</item>
        <item name="td_drawer_settings_icon">@drawable/ic_settings_white_24dp</item>
        <item name="td_drawer_help_and_feedback_icon">@drawable/ic_help_circle_white_24dp</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark_failsafe</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_dark_failsafe</item>

        <item name="td_unofficial">@drawable/ic_launcher</item>

    </style>


    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="td_accent_color">@color/colorAccent_light</item>

        <item name="td_primary_color">@color/primaryColor_light</item>
        <item name="colorPrimary">@color/primaryColor_light</item>
        <item name="colorPrimaryDark">@color/primaryColorDark_light</item>
        <item name="td_nav_drawer_header">@drawable/side_nav_bar_light</item>

        <item name="td_fab_menu_normal">@color/fabMenuColorNormal_light</item>
        <item name="td_fab_menu_pressed">@color/fabMenuColorPressed_light</item>
        <item name="td_fab_normal">@color/fabColorNormal_light</item>

        <item name="td_nav_drawer_bg">@drawable/navigation_view_bg_light</item>

        <item name="td_circle">@drawable/circle_light</item>

        <item name="td_drawer_audio_icon">@drawable/ic_music_note_black_24dp</item>
        <item name="td_drawer_dsp_icon">@drawable/ic_pulse_black_24dp</item>
        <item name="td_drawer_input_icon">@drawable/ic_import_black_24dp</item>
        <item name="td_drawer_webradio_icon">@drawable/ic_radio_black_24dp</item>
        <item name="td_drawer_spotify_icon">@drawable/ic_spotify_black_24dp</item>
        <item name="td_drawer_settings_icon">@drawable/ic_settings_black_24dp</item>
        <item name="td_drawer_help_and_feedback_icon">@drawable/ic_help_circle_black_24dp</item>

        <item name="colorAccent">@color/colorAccent_light</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_light_failsafe</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_light_failsafe</item>

        <item name="td_unofficial">@drawable/ic_launcher</item>

    </style>

    <style name="Transparent.Base" parent="AppTheme">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>

        <!--transparent statusbar-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/transparent</item>

    </style>


    <style name="Transparent" parent="Transparent.Base">

        <item name="td_accent_color">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_dark_failsafe</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_dark_failsafe</item>

    </style>


    <style name="Transparent.Light" parent="Transparent.Base">

        <item name="td_accent_color">@color/colorAccent_light</item>
        <item name="android:colorAccent">@color/colorAccent_light</item>
        <item name="android:textColorPrimary">@color/primary_text_default_material_light_failsafe</item>
        <item name="android:textColorSecondary">@color/secondary_text_default_material_light_failsafe</item>

    </style>

</resources>