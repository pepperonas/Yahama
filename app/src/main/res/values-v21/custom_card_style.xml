<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="custom_action_card" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/actioncard_large_height</item>
        <item name="android:layout_marginLeft">@dimen/gap_card_to_card_smaller_h</item>
        <item name="android:layout_marginRight">@dimen/gap_card_to_card_smaller_h</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/card_foreground</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>