<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_nav_view_header"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="?attr/td_nav_drawer_header"
                android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="?attr/td_unofficial"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="false"
        android:layout_above="@+id/nav_view_header_title"
        android:maxWidth="48dp"
        android:minHeight="48dp"
        android:minWidth="48dp"
        android:maxHeight="48dp"/>

    <TextView
        android:id="@+id/nav_view_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:layout_above="@+id/nav_view_header_subtitle"
        android:layout_alignLeft="@+id/iv_logo"
        android:layout_alignStart="@+id/iv_logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/nav_view_header_subtitle"
        android:gravity="left"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/nav_view_header_title"
        android:layout_alignStart="@+id/nav_view_header_title"
        />

</RelativeLayout>