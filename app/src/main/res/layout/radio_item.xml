<android.support.v7.widget.CardView
    android:id="@+id/cv_radio_item"
    android:layout_width="match_parent"
    android:clickable="true"
    android:foreground="@drawable/card_foreground"
    android:layout_height="@dimen/radiocard_height"
    android:layout_marginBottom="@dimen/gap_radiocard_to_radiocard_v"
    android:layout_marginTop="@dimen/gap_radiocard_to_radiocard_v"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_radio_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/radiocard_icon_min_h"
            android:minHeight="@dimen/radiocard_icon_min_h"
            android:maxWidth="@dimen/radiocard_icon_min_h"
            android:maxHeight="@dimen/radiocard_icon_min_h"
            android:layout_marginLeft="@dimen/radiocard_icon_margin_l"/>

        <TextView
            android:id="@+id/tv_radio_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/radiocard_text_size"
            android:layout_marginLeft="@dimen/radiocard_text_margin_l"
            android:text=""
            android:gravity="center_vertical"
            android:textColor="@color/input_action_card"/>

    </LinearLayout>

</android.support.v7.widget.CardView>